{
    "name": "yourname/yourproject",
    "description": "A brief description of your project",
    "require": {
    "composer/installers": "^1.9"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan migrate",
            "php artisan config:cache",
            "php artisan route:cache",
            "git pull origin main",
            "cd client",
            "npm install",
            "npm run build"
        ],
        "post-update-cmd": [
            "php artisan migrate",
            "php artisan config:cache",
            "php artisan route:cache",
            "git pull origin main",
            "npm install",
            "npm run build"
        ]
    }
}